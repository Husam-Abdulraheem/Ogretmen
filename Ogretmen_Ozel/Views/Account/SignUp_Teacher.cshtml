@model Ogretmen_Ozel.Models.AccountModels.TeacherSignUp

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp_Teacher</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("SignUp_Teacher", "Account"))
        {
            <div>
                <div>
                    Ad
                    @Html.TextBoxFor(model => model.User.Name, new { @required = "required" })
                </div>
                <div>
                    SoyAd
                    @Html.TextBoxFor(model => model.User.LastName, new { @required = "required" })
                </div>
                <div>
                    Email
                    @Html.TextBoxFor(model => model.User.Email, new { @required = "required" })
                </div>
                <div>
                    Password
                    @Html.TextBoxFor(model => model.User.Password, new { @required = "required" })
                </div>
                <div>
                    Numara
                    @Html.TextBoxFor(model => model.User.Phone, new { @required = "required" })
                </div>
                <br />
            </div>
            <div>
                Ulke
                @Html.TextBoxFor(model => model.Address.Country, new { @required = "required" })
            </div>
            <div>
                Sehir
                @Html.TextBoxFor(model => model.Address.City, new { @required = "required" })
            </div>
            <div>
                Sokak
                @Html.TextBoxFor(model => model.Address.Street, new { @required = "required" })
            </div>

            @Html.DropDownListFor(model => model.Id, (IEnumerable<SelectListItem>)ViewData["Subject"], "Select Subject", new { @class = "form-control", required = "required" })




            <input type="submit" value="submit" />
        }
        <div>
            @if (ViewBag.resultT != null)
            {
                <div>@ViewBag.resultT</div>
            }
        </div>


    </div>
</body>
</html>
